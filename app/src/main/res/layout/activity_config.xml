<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Screens.Configuracio">

    <include layout="@layout/toolbar" />

    <FrameLayout
        android:id="@+id/pref_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.github.nikartm.button.FitButton
        android:id="@+id/contraseña"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:enabled="true"
        android:gravity="center"
        app:fb_backgroundColor="@color/button"
        app:fb_cornerRadius="50dp"
        app:fb_divColor="@color/button"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:layout_marginBottom="10dp"
        app:fb_shape="rectangle"
        app:fb_text="Cambiar Contraseña"
        app:fb_textSize="15dp"
        app:fb_textColor="@color/White" />
    <com.github.nikartm.button.FitButton
        android:id="@+id/cerrar"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:enabled="true"
        android:gravity="center"
        app:fb_backgroundColor="@color/red"
        app:fb_cornerRadius="50dp"
        app:fb_divColor="@color/red"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:layout_marginBottom="10dp"
        app:fb_shape="rectangle"
        app:fb_text="Cerrar Sesión"
        app:fb_textSize="15dp"
        app:fb_textColor="@color/White" />

</LinearLayout>