<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout="@layout/toolbar">
        <EditTextPreference
            android:key="@string/preferenceEmail"
            android:selectable="false"
            app:iconSpaceReserved="false"
            android:summary="Correo electronico de la cuenta"
            android:title="@string/literalCorreo"/>
        <EditTextPreference
            android:key="@string/preferenceUsername"
            android:selectable="true"
            app:iconSpaceReserved="false"
            android:summary="Alias del usuario"
            android:title="@string/literalUsername"/>
        <EditTextPreference
            android:key="@string/preftelefono"
            android:selectable="true"
            app:iconSpaceReserved="false"
            android:summary="Numero de contacto"
            android:title="@string/literalTelefono"/>
        <Preference
            android:key="@string/preferenceTarjeta"
            android:title="@string/config_pago"
            app:iconSpaceReserved="false"
            android:summary="@string/inf_tarjeta"/>
        <ListPreference
            android:title="@string/visualizarmapa"
            android:summary="@string/redmapa"
            android:key="@string/preferenciared"
            android:defaultValue="Wi-Fi"
            android:entries="@array/nombres"
            android:entryValues="@array/valores"
            app:iconSpaceReserved="false"/>
        <SwitchPreference
            android:key="@string/mantenersesion"
            app:iconSpaceReserved="false"
            android:title="Mantener sesión iniciada"
            android:summary="La sesión permanecera iniciada"
            android:defaultValue="true"/>
</PreferenceScreen>